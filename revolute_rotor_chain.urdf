<?xml version="1.0" ?>

<!-- TODO(@MatthewChignoli): Use xacro to clean up the code -->
<!-- TODO(@MatthewChignoli): Not sure I love this name for the file/robot -->

<robot name="revolute_rotor_chain" xmlns:xacro="http://ros.org/wiki/xacro">

    <link name="ground"/>

    <link name="link-0">
        <inertial>
            <mass value="1"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>    
        </inertial>
    </link>    
    <link name="rotor-0">
        <inertial>
            <mass value="1"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>    
        </inertial>
    </link>   

    <link name="link-1">
        <inertial>
            <mass value="1"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>    
        </inertial>
    </link>   
    <link name="rotor-1">
        <inertial>
            <mass value="1"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>    
        </inertial>
    </link>   

    <link name="link-2">
        <inertial>
            <mass value="1"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>    
        </inertial>
    </link>   
    <link name="rotor-2">
        <inertial>
            <mass value="1"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>    
        </inertial>
    </link>   

    <joint name="joint1" type="continuous">
        <parent link="ground"/>
        <child link="link-0"/>
        <axis xyz="0 0 1"/>
    </joint>
    <joint name="joint1r" type="continuous" independent="false">
        <parent link="ground"/>
        <child link="rotor-0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="joint2" type="continuous">
        <parent link="link-0"/>
        <child link="link-1"/>
        <axis xyz="0 0 1"/>
    </joint>
    <joint name="joint2r" type="continuous" independent="false">
        <parent link="link-0"/>
        <child link="rotor-1"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="joint3" type="continuous">
        <parent link="link-1"/>
        <child link="link-2"/>
        <axis xyz="0 0 1"/>
    </joint>
    <joint name="joint3r" type="continuous" independent="false">
        <parent link="link-1"/>
        <child link="rotor-2"/>
        <axis xyz="0 0 1"/>
    </joint>

    <constraint_joint name="transmission1" type="rotation">
        <parent link="link-0"/>
        <child link="rotor-0"/>
        <parent_origin xyz="2.0 0.0 0.0"/>
        <child_origin xyz="0.2 0.0 0.0"/>
    </constraint_joint>

    <constraint_joint name="transmission2" type="rotation">
        <parent link="link-1"/>
        <child link="rotor-1"/>
        <parent_origin xyz="2.0 0.0 0.0"/>
        <child_origin xyz="0.2 0.0 0.0"/>
    </constraint_joint>

    <constraint_joint name="transmission3" type="rotation">
        <parent link="link-2"/>
        <child link="rotor-2"/>
        <parent_origin xyz="2.0 0.0 0.0"/>
        <child_origin xyz="0.2 0.0 0.0"/>
    </constraint_joint>

</robot>
